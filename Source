#include <iostream>

using namespace std;

#include <string.h>
#include <stdlib.h>
#include <string>


void main()
{
	cout << "Welcome to Chancellors palindrome finderino" << endl;
	while (true)
	{
		int result;
		string Str1;
		string Str2;

		cout << "Enter a word: ";
		cin >> Str1;

		Str2 = "END";

		if (Str1 == Str2)
			exit(0);



		if (Str1 == string(Str1.rbegin(), Str1.rend()))
			cout << Str1 << " is a Palindrome" << endl;
		else
			cout << Str1 << " is not a Palindrome" << endl;
			
	}





}
